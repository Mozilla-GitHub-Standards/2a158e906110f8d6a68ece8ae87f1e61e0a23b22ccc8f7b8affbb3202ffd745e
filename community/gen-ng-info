#!/usr/bin/perl -w

if (scalar @ARGV != 1)
{
  print "Usage: gen-ng-info [inputfile] > [outputfile]\n";
  exit(1);
}

my $list_open = 0;

print "\n\n<!-- Generated by gen-ng-info from $ARGV[0] -->\n\n";
while (<>)
{
  if ($_ =~ /^(mozilla\.[a-z0-9\-\.]+)\s+(.*)$/)
  {
    my $dotted = $1;
    
    my $description = $2;
    
    my $hyphenated = $dotted;
    $hyphenated =~ tr/\./\-/;
    $hyphenated =~ s/^mozilla-//;
    
    my $heading = $dotted;
    $heading =~ s/^.*\.([^.]+)$/$1/;
    $heading =~ s/^([a-z])/&uc($1)/;
  
    print <<END
<tr>
<th id="$hyphenated">$dotted</th>
<td>
  $description
</td>
<td>
  <ul class="subscribe">
    <li>News: <a href="news://news.mozilla.org/$dotted">$dotted</a></li>
    <li>List: $hyphenated&#64;lists.mozilla.org <a href="https://lists.mozilla.org/listinfo/$hyphenated">subscribe/unsubscribe</a></li>
  </ul>
</td>
</tr>
END
;

  }
  elsif ($_ =~ /^:(.*)$/)
  {
    my $title = $1;
    my $anchor = $title;
    $anchor =~ tr/A-Z /a-z\-/;
    
    if ($list_open)
    {
      print <<END
</table>      
END
; 
      $list_open = 0;     
    }
    
    print <<END
    
<h2 id="$anchor">$title</h2>

<p>Please read the <a href="etiquette.html">Mozilla forum
etiquette</a> document for posting rules and conventions.</p>

<table class="forumlist">
<colgroup><col class="name"><col><col class="subscribe"></colgroup>

END
;  
     $list_open = 1;  
  }  
}

print <<END
</table>      

<!-- end of generated HTML -->

END
; 

